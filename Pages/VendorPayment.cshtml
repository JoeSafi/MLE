@page
@model MLEFIN.Pages.VendorPaymentModel

@{ 
    ViewData["Title"] = "Vendor Payments";
}

<h1>Vendor Payments</h1>

<div class="d-flex justify-content-end mb-3">
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#paymentModal">
        Add Payment
    </button>
</div>

<form method="get">
    <div class="form-row">
        <div class="form-group col-md-3">
            <label for="VendorFilter">Vendor</label>
            <select asp-for="VendorFilter" asp-items="Model.Vendors" class="form-control">
                <option value="">All Vendors</option>
            </select>
        </div>
        <div class="form-group col-md-2">
            <label for="DateFilter">Date</label>
            <input type="date" asp-for="DateFilter" class="form-control" />
        </div>
        <div class="form-group col-md-1">
            <label>&nbsp;</label>
            <button type="submit" class="btn btn-primary">Filter</button>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Payments.FirstOrDefault().PaymentDate)</th>
            <th>@Html.DisplayNameFor(model => model.Payments.FirstOrDefault().VendorCompany.CompanyName)</th>
            <th>@Html.DisplayNameFor(model => model.Payments.FirstOrDefault().Amount)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Payments)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.PaymentDate)</td>
                <td>@Html.DisplayFor(modelItem => item.VendorCompany.CompanyName)</td>
                <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                <td>
                    <a asp-page="./VendorPaymentDetails" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./EditVendorPayment" asp-route-id="@item.Id">Edit</a> |
                    <a href="#" data-toggle="modal" data-target="#deleteModal_@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<partial name="Shared/_VendorPaymentModal" view-data="ViewData" />

@section Scripts {
    <script>
        $(function () {
            $('#paymentModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var paymentId = button.data('payment-id');
                var modal = $(this);

                if (paymentId) {
                    $.get('/api/payments/' + paymentId, function (data) {
                        modal.find('#Id').val(data.id);
                        modal.find('#PaymentDate').val(data.paymentDate.split('T')[0]);
                        modal.find('#VendorCompanyID').val(data.vendorCompanyID);
                        modal.find('#Amount').val(data.amount);
                        modal.find('#PaymentMethod').val(data.paymentMethod);
                        modal.find('#CheckNumber').val(data.checkNumber);
                        modal.find('#ReferenceNumber').val(data.referenceNumber);
                        modal.find('#Notes').val(data.notes);
                    });
                } else {
                    modal.find('form')[0].reset();
                }
            });

            $('#savePayment').on('click', function () {
                var form = $('#paymentForm');
                var payment = form.serialize();

                $.post('/api/payments', payment, function () {
                    $('#paymentModal').modal('hide');
                    location.reload();
                });
            });
        });
    </script>
}