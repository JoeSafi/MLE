@page
@model MLEFIN.Pages.PartsModel

@{ 
    ViewData["Title"] = "Parts";
}

<h1>Parts</h1>

<form method="post">
    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="Part.PartNumber"></label>
            <input asp-for="Part.PartNumber" class="form-control" />
            <span asp-validation-for="Part.PartNumber" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Part.Description"></label>
            <input asp-for="Part.Description" class="form-control" />
            <span asp-validation-for="Part.Description" class="text-danger"></span>
        </div>
        <div class="form-group col-md-2">
            <label asp-for="Part.CurrentCost"></label>
            <input asp-for="Part.CurrentCost" class="form-control" />
            <span asp-validation-for="Part.CurrentCost" class="text-danger"></span>
        </div>
        <div class="form-group col-md-2">
            <label asp-for="Part.ListPrice"></label>
            <input asp-for="Part.ListPrice" class="form-control" />
            <span asp-validation-for="Part.ListPrice" class="text-danger"></span>
        </div>
        <div class="form-group col-md-1">
            <label>&nbsp;</label>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Part.PartNumber)</th>
            <th>@Html.DisplayNameFor(model => model.Part.Description)</th>
            <th>@Html.DisplayNameFor(model => model.Part.CurrentCost)</th>
            <th>@Html.DisplayNameFor(model => model.Part.ListPrice)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Parts)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.PartNumber)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.CurrentCost)</td>
                <td>@Html.DisplayFor(modelItem => item.ListPrice)</td>
                <td>
                    <a asp-page-handler="Edit" asp-route-id="@item.Id">Edit</a> |
                    <form method="post" asp-page-handler="Delete" asp-route-id="@item.Id" onsubmit="return confirm('Are you sure you want to delete this item?');">
                        <button type="submit" class="btn btn-link">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
